<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <gradient android:angle="270" android:centerColor="#8106C5B3" android:endColor="#CAD189" android:startColor="#864CAF50" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1D5E7873" />
            <solid android:color="#58857e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#255E7974" />
            <gradient android:angle="270" android:centerColor="#8106C5B3" android:endColor="#864CAF50" android:startColor="#CAD189" />
        </shape>
    </item>
</selector>